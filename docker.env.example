# Invoice Management System - Docker Environment Configuration
# Copy this file to .env and update the values for your environment

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=production
PORT=4001

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://invoice_user:your_secure_password@database:5432/invoice_management

# Database connection settings
DB_HOST=database
DB_PORT=5432
DB_NAME=invoice_management
DB_USER=invoice_user
DB_PASSWORD=your_secure_password

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Generate a secure random string for production
# You can use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters

# JWT token expiration (default: 24h)
JWT_EXPIRES_IN=24h

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Additional allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# SendGrid Configuration (alternative to SMTP)
# SENDGRID_API_KEY=your-sendgrid-api-key
# FROM_EMAIL=noreply@yourdomain.com

# ==============================================
# PUPPETEER CONFIGURATION
# ==============================================
# Puppeteer executable path for Docker
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# ==============================================
# REDIS CONFIGURATION (Optional)
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# DATABASE BACKUP SETTINGS
# ==============================================
# Backup retention days (default: 7)
BACKUP_RETENTION_DAYS=7

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760

# Upload directory
UPLOAD_DIR=/home/node/app/uploads

# ==============================================
# SECURITY SETTINGS
# ==============================================
# API rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Security headers
HELMET_ENABLED=true

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ==============================================
# HEALTH CHECK CONFIGURATION
# ==============================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_VALIDATION=true 